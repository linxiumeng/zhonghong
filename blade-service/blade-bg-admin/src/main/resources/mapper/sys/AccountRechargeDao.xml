<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.finepetro.modules.sys.dao.AccountRechargeDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.finepetro.modules.sys.entity.AccountRechargeWithUserEntity" id="accountRechargeMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="account" column="account"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="verifier" column="verifier"/>
        <result property="proof" column="proof"/>
        <result property="verifiyDate" column="verifiy_date"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>

        <association property="userEntity" column="user_id" select="io.finepetro.modules.sys.dao.FuserDao.selectByUserId"/>
    </resultMap>

    <select id="selectAccountRechargeList" resultMap="accountRechargeMap">
        select * from tb_account_recharge recharge join tb_fuser users on recharge.user_id = users.user_id

        <where>${ew.sqlSegment}</where>

        order by recharge.create_date desc
    </select>

</mapper>